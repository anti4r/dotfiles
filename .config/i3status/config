# i3status configuration file.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
    colors = true
    interval = 5
    separator = false
}

order += "vpn_status"
order += "whatismyip"
order += "cpu_usage"
order += "battery all"
order += "volume master"
order += "tztime local"

vpn_status {
    format = "  "
    cache_timeout = 5
    check_pid = true
    pidfile = "/sys/class/net/tun0/dev_id"

}

whatismyip {
    format = " {ip} {city}, {country_iso} "
    color_bad = "#FFFFFF"
    color_good = "#bf94e4"
    cache_timeout = 10
    mode = status 
}
cpu_usage {
    format = "   %usage"
    max_threshold = 90
    degraded_threshold = 75
}

battery all {
    format = "  %status %percentage"
    integer_battery_capacity = true
    status_chr = "⚡"
    status_bat = ""
    status_full = ""
    status_unk = ""
    low_threshold = 30
    threshold_type = percentage
}

tztime local {
    format = "   %m/%d/%y %H:%M  "
}

volume master {
    format = "♪: %volume"
    format_muted = "  "
    device = "pulse"
}
